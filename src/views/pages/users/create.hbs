<form action="/users/" method="POST">
  {{#if error}}
    <div class="notification">
      <div class="notification is-danger">
        <button class="delete">&times;</button> {{ error }}
      </div>
  {{/if}}

  <div class="field">
    <label class="label">First Name</label>
    <div class="control">
      <input class="input" type="text" placeholder="Abdullah" name="firstName" />
    </div>
  </div>

  <div class="field">
    <label class="label">Last Name</label>
    <div class="control">
      <input class="input" type="text" placeholder="Alharbi" name="lastName" />
    </div>
  </div>

  <div class="field">
    <label class="label">Age</label>
    <div class="control">
      <input class="input" type="number" placeholder="26" name="age" />
    </div>
  </div>

  <div class="field is-grouped">
    <div class="control">
      <button type="submit" class="button is-link">Submit</button>
    </div>
  </div>

</form>